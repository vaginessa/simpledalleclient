<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Simpledalleclient" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorPlaster</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorAux</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryAlt</item>
        <item name="colorOnSecondary">@color/colorAccent</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/anurati_regular</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="colorOnPrimary">@color/colorPlaster</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorPrimaryDark</item>
    </style>

    <style name="LoadingTheme" parent="Theme.Material3.Dark">
<!--        <item name="android:windowBackground">@drawable/load</item>-->
        <item name="android:backgroundTint">@color/material_dynamic_neutral0</item>
        <item name="android:background">@color/design_default_color_background</item>
        <item name="colorOnPrimary">@color/colorPrimaryDark</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryDark</item>
    </style>

    <style name="Theme.Simpledalleclient.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Simpledalleclient.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Simpledalleclient.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>